{% extends '/layouts/public.twig'%}

{% block title %}Accueil{% endblock %}

{% block content %}
    <div id="movies">
        <h1 class="title-main"></h1>

        <div>
        {% for movie in movies %}

            <article>
                <a href="{{ getUrl('details', {'slug':movie.slug}) }}">
                    <h2> {{movie.title}} </h2>
                    <p>{{movie.synopsis}}</p>
                    <img src="{{movie.poster}}" alt="{{movie.title}}">
                </a>
            </article>
        {% endfor %}
        </div>

    </div>
{% endblock %}
